
@{
    ViewBag.Title = "CreateNew";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model  Models.Entity.Category

<div class="text-center font-weight-bold">
    <h2>Create Category</h2>
</div>
<div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12">
        @using (Html.BeginForm("CreateCategory", "Category", FormMethod.Post))
        {
            <div class="col-md-3 col-sm-12 col-xs-12 text-center ">
                @Html.LabelFor(s => Model.CategoryName, new { @class = "control-label" })
                <span class="required">*</span>
            </div>
            <div class="col-md-5 col-sm-12 col-xs-12">
                @Html.EditorFor(s => Model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-3 col-sm-12 col-xs-12">
                <input type="submit" value="Add New" class="btn btn-form" />
            </div>
        }
    </div>
</div>

